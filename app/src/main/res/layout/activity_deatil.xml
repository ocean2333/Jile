<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Detail.DeatilActivity">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary">
        <ImageButton
            android:src="@drawable/ic_arrow_left"
            android:id="@+id/btnBack"
            android:background="@color/xui_transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.11"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:gravity="center_vertical|start"
            android:paddingLeft="20dp"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.81"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/pic_background">
        <TextView
            android:layout_width="match_parent"
            android:text="结余"
            android:textSize="25sp"
            android:gravity="bottom"
            android:paddingLeft="20dp"
            android:background="@color/xui_transparent"
            android:paddingBottom="10dp"
            android:layout_height="75dp"/>
        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:text="1234.56"
            android:textSize="40sp"
            android:gravity="center_vertical|start"
            android:layout_height="75dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:paddingHorizontal="20dp"
                android:text="收入"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvIncome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:paddingLeft="20dp"
                android:text="收入  123456.78"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="20dp"
                android:textSize="15sp"
                android:text="支出"
                android:gravity="center_vertical|start"/>
            <TextView
                android:id="@+id/tvCost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                android:text="支出  1234.56"
                android:gravity="center_vertical|start"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
            android:id="@+id/btnDateStart"
            android:background="@android:color/transparent"
            android:textSize="20sp"
            android:maxLines="1"
            android:text="2020年12月12日"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="0dp"
            android:paddingVertical="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_direction_right"
            android:layout_height="match_parent"/>
        <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
            android:id="@+id/btnDateEnd"
            android:textSize="20sp"
            android:maxLines="1"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:text="2020年12月12日"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>
        <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
            android:maxLines="1"
            android:gravity="center"
            android:id="@+id/btnSearchType"
            android:background="@android:color/transparent"
            android:layout_width="125dp"
            android:textSize="20sp"
            android:text="这是一个分类"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />
    </LinearLayout>
</LinearLayout>