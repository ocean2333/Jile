<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainView.MainActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvMonth"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimary"
        android:paddingLeft="20dp"
        android:textSize="30sp" />
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_below="@id/tvMonth"
        android:background="@drawable/pic_background">
        <LinearLayout
            android:id="@+id/EarnAndCostTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/xui_transparent">
            <TextView
                android:id="@+id/tvCostTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="支出"
                android:gravity="center_vertical"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/tvEarnTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tvEarnAndCost"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
                app:aftv_enable="true"
                android:id="@+id/tvCost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:text="-52"
                android:gravity="top|start"
                android:textSize="50sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="收入"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_weight="0.5"/>
            <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
                android:id="@+id/tvIncome"
                android:layout_width="0dp"
                android:paddingVertical="25dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingLeft="20dp"
                android:maxLines="1"
                android:text="+14.00"
                android:gravity="top"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvBudget"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:paddingHorizontal="20dp"
                android:text="预算"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tvBudgetNum"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1000"
                android:textSize="18sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnModifyBudget"
            android:paddingLeft="20dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="更改预算"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="@drawable/top_and_bottom_edge"
        android:padding="1dp"
        android:layout_below="@id/ll_1">

        <ImageView
            android:id="@+id/btnToCalender"
            android:layout_width="79dp"
            android:layout_height="75dp"
            android:padding="12dp"
            android:src="@drawable/ic_today" />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:text="今天"
            android:gravity="center_vertical|start"
            android:textSize="25sp"/>
        <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
            android:id="@+id/tvIncomeToday"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:text="+0"
            android:maxLines="1"
            android:gravity="center_vertical|start"
            android:textSize="25sp"/>
        <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
            android:id="@+id/tvCostToday"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:text="-0"
            android:gravity="center_vertical|start"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/btnToDetail"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:background="@drawable/ic_arrow_right"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_below="@id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"
        android:orientation="horizontal" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:layout_below="@id/ll_3"
        android:layout_above="@id/bottomButton">
        <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            tools:listitem="@android:layout/simple_list_item_2" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:background="@color/white"
        android:paddingVertical="7dp"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/btnAccount"
            android:background="@color/xui_transparent"
            android:drawableTop="@drawable/ic_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="账户"/>
        <Button
            android:id="@+id/btnDetail"
            android:background="@color/xui_transparent"
            android:drawableTop="@drawable/ic_account_details"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="流水"/>
        <Button
            android:id="@+id/btnNew"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:paddingHorizontal="40dp"
            android:background="@drawable/ic_add_circle"/>
        <Button
            android:drawableTop="@drawable/ic_pie_graph"
            android:background="@color/xui_transparent"
            android:id="@+id/btnGraph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="图表"/>
        <Button
            android:drawableTop="@drawable/ic_setting2"
            android:background="@color/xui_transparent"
            android:id="@+id/btnSetting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="设置"/>
    </LinearLayout>

</RelativeLayout>