<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:textSize="10sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvDay"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_below="@+id/tvTime"
        android:layout_width="50dp"
        android:layout_height="25dp"/>
    <ImageView
        android:id="@+id/ivIcon"
        android:src="@drawable/ic_food"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:layout_toEndOf="@+id/tvTime"/>
    <TextView
        android:textSize="15sp"
        android:gravity="center_vertical|start"
        android:id="@+id/tvSecondClass"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@+id/ivIcon"
        android:layout_toStartOf="@id/tvMoney"/>
    <TextView
        android:textSize="15sp"
        android:gravity="center_vertical|start"
        android:id="@+id/tvAccount"
        android:layout_toEndOf="@+id/ivIcon"
        android:layout_toStartOf="@id/tvMoney"
        android:layout_below="@+id/tvSecondClass"
        android:layout_width="200dp"
        android:layout_height="25dp"/>
    <com.xuexiang.xui.widget.textview.autofit.AutoFitTextView
        app:aftv_minTextSize="5sp"
        android:textSize="20sp"
        android:text="123355"
        android:gravity="center_vertical|start"
        android:id="@+id/tvMoney"
        android:maxLines="1"
        android:layout_width="90dp"
        android:layout_toStartOf="@id/btnModify"
        android:layout_height="match_parent"/>
    <ImageButton
        android:background="@color/xui_transparent"
        android:src="@drawable/ic_arrow_right"
        android:id="@+id/btnModify"
        android:layout_alignParentEnd="true"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/tvUuid"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</RelativeLayout>