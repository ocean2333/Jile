<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting.ThemeSettingActivity"
    android:id="@+id/rootLL"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary">
        <ImageButton
            android:src="@drawable/ic_arrow_left"
            android:id="@+id/btnBack"
            android:background="@color/xui_transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.11"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:gravity="center_vertical|start"
            android:paddingLeft="20dp"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.81"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/pic_background">
    </LinearLayout>
    <!--theme color selector-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="8dp"
            android:src="@drawable/circle_white"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:text="简洁白"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="8dp"
            android:src="@drawable/circle_green"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:text="早苗绿"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="8dp"
            android:src="@drawable/circle_yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:text="咸蛋黄"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="8dp"
            android:src="@drawable/circle_blue"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:text="天空蓝"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="8dp"
            android:src="@drawable/circle_pink"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:text="少女粉"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="8dp"
            android:src="@drawable/circle_red"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:text="烈艳红"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>


</LinearLayout>